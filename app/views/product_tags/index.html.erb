<p id="notice"><%= notice %></p>

<h1>Product Tags</h1>

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_tags.each do |product_tag| %>
      <tr>
        <td><%= product_tag.tag %></td>
        <td><%= link_to 'Show', product_tag %></td>
        <td><%= link_to 'Edit', edit_product_tag_path(product_tag) %></td>
        <td><%= link_to 'Destroy', product_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Tag', new_product_tag_path %>
